<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".History"
    android:id="@+id/frameLayout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_margin="20dp"
            android:elevation="@dimen/cardview_default_elevation"
            app:cardBackgroundColor="#F4E2F8"
            app:cardCornerRadius="5dp"
            app:cardElevation="@dimen/cardview_default_elevation">

            <TextView
                android:id="@+id/totTimelabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginStart="20dp"
                android:fontFamily="sans-serif-black"
                android:gravity="center_horizontal|center_vertical"
                android:padding="5dp"
                android:text="Total Office time"
                android:textSize="20sp" />


            <TextView
                android:id="@+id/socTimelabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="70dp"
                android:fontFamily="sans-serif-black"
                android:padding="5dp"
                android:text="Socialise Time"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/workTimelabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="130dp"
                android:fontFamily="sans-serif-black"
                android:padding="5dp"
                android:text="Work Time"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/totTimeValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="35dp"
                android:fontFamily="sans-serif-black"
                android:padding="5dp"
                android:text="0.00"
                android:textColor="#593460"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/socTimeValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="100dp"
                android:fontFamily="sans-serif-black"
                android:padding="5dp"
                android:text="0.00"
                android:textColor="#593460" />

            <TextView
                android:id="@+id/lunchTimeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="130dp"
                android:fontFamily="sans-serif-black"
                android:padding="5dp"
                android:text="Lunch time"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/lunchTimeValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="160dp"
                android:fontFamily="sans-serif-black"
                android:padding="5dp"
                android:text="0.00"
                android:textColor="#593460"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/workTimeValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="160dp"
                android:fontFamily="sans-serif-black"
                android:padding="5dp"
                android:text="0.00"
                android:textColor="#593460"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/meetingTimeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="70dp"
                android:fontFamily="sans-serif-black"
                android:padding="5dp"
                android:text="Meeting time"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/meetingTimeValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="100dp"
                android:fontFamily="sans-serif-black"
                android:padding="5dp"
                android:text="0.00"
                android:textColor="#593460"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/exerciseTimeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="130dp"
                android:fontFamily="sans-serif-black"
                android:padding="5dp"
                android:text="Transit time"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/exerciseTimeValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="160dp"
                android:fontFamily="sans-serif-black"
                android:padding="5dp"
                android:text="0.00"
                android:textColor="#593460" />

            <TextView
                android:id="@+id/stepsLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginStart="220dp"
                android:fontFamily="sans-serif-black"
                android:padding="5dp"
                android:text="Steps"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/stepsValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginLeft="240dp"
                android:layout_marginTop="35dp"
                android:fontFamily="sans-serif-black"
                android:text="0.00"
                android:textColor="#593460"
                android:textSize="16sp" />


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:elevation="@dimen/cardview_default_elevation"
            android:foregroundGravity="center_vertical|center"
            app:cardBackgroundColor="#DFB4E6"
            app:cardCornerRadius="5dp"
            app:cardElevation="@dimen/cardview_default_elevation">

            <CalendarView
                android:id="@+id/calendarView2"
                style="@android:style/Widget.DeviceDefault.CalendarView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:dateTextAppearance="@style/TextAppearance.AppCompat.Medium"
                android:elevation="@dimen/cardview_default_elevation"
                android:focusedMonthDateColor="#9C27B0"
                android:foregroundGravity="center_vertical" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNav"
        android:layout_width="wrap_content"
        android:layout_height="66dp"
        android:layout_gravity="bottom"
        android:visibility="visible"
        app:itemBackground="@color/white"
        app:itemIconTint="@drawable/bottom_nav_bar"
        app:itemTextColor="@drawable/bottom_nav_bar"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/my_menu"
        tools:layout_conversion_absoluteHeight="66dp"
        tools:layout_conversion_absoluteWidth="397dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="666dp" />

</FrameLayout>